<!-- 背景選択画面 / Background Select Screen -->
<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title>背景選択</title>
  <link rel="stylesheet" href="/styles/common.css">
</head>
<body>
  <h1>背景選択</h1>
  <div class="select-container">
    <% if (backgrounds && backgrounds.length > 0) { %>
      <button id="prev-btn">←</button>
      <div id="background-info">
        <img id="background-img" src="<%= backgrounds[0].assetPath %>" alt="背景画像" style="max-width:200px;max-height:200px;">
        <div id="background-name"><%= backgrounds[0].name %></div>
      </div>
      <button id="next-btn">→</button>
    <% } else { %>
      <div>未設定です</div>
    <% } %>
  </div>
  <form action="/costume" method="get" id="next-form">
    <button type="submit" id="next-btn-main">衣装選択画面へ</button>
  </form>
  <nav>
    <a href="/character">キャラクター選択へ戻る</a> |
    <a href="/title">タイトルへ戻る</a>
  </nav>
  <% if (backgrounds && backgrounds.length > 0) { %>
    <% var backgroundsJson = JSON.stringify(backgrounds).replace(/'/g, "\\'"); %>
    <script>
      var backgrounds = JSON.parse('<%= backgroundsJson %>');
      let idx = 0;
      const img = document.getElementById('background-img');
      const name = document.getElementById('background-name');
      document.getElementById('prev-btn').onclick = function() {
        idx = (idx - 1 + backgrounds.length) % backgrounds.length;
        img.src = backgrounds[idx].assetPath;
        name.textContent = backgrounds[idx].name;
      };
      document.getElementById('next-btn').onclick = function() {
        idx = (idx + 1) % backgrounds.length;
        img.src = backgrounds[idx].assetPath;
        name.textContent = backgrounds[idx].name;
      };
    </script>
  <% } %>
</body>
</html>
